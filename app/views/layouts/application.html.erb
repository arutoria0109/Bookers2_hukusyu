<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Hukusyu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/57fefeb910.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  

    <% if user_signed_in? %>
    <body>
      <header class="shadow-sm">
      <div class="container-fould">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="navbar-brand">
       <%= link_to "Bookers", root_path, class: "navbar-brand" %>
      </div>

        <ul class="ml-auto d-flex">
          <li class="nav-link text-light ">
            <%= link_to user_path(current_user), class: "nav-link text-light" do %>
            <i class="fas fa-home"></i>Home
            <% end %>
          </li>

          <li class="nav-link text-light ">
            <%= link_to users_path, class: "nav-link text-light" do  %>
            <i class="fas fa-users"></i>Users
            <% end %>

          <li class="nav-link text-light ">
            <%= link_to books_path, class: "nav-link text-light" do  %>
            <i class="fas fa-book-open"></i>Books
            <% end %>
          </li>

          <li class="nav-link text-light ">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
            <i class="fas fa-sign-out-alt"></i>Log out
            <% end %>
          </li>
          </ul>
          </nav>

      <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="navbar-brand">
       <%= link_to "Bookers", root_path, class: "navbar-brand" %>
       </div>

        <ul class="ml-auto d-flex">
          <li class="nav-link text-light ">
            <%= link_to root_path, class: "nav-link text-light" do %>
            <i class="fas fa-home"></i>Home
            <% end %>
          </li>

          <li class="nav-link text-light ">
            <%= link_to root_path, class: "nav-link text-light" do %>
            <i class="fas fa-link"></i>About
            <% end %>
          </li>

          <li class="nav-link text-light ">
            <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
            <i class="fas fa-user-plus"></i>Sign up
            <% end %>
          </li>

          <li class="nav-link text-light ">
            <%= link_to new_user_session_path, class: "nav-link text-light" do %>
            <i class="fas fa-sign-in-alt"></i>Log in
            <% end %>
          </li>

      </ul>
      </nav>
      </div>
    </header>
    <% end %>

    <%= yield %>
  </body>
  <footer>
    <div class="container mt-5">
      <div class="row">
      <div class="mx-auto">
        <p>CopyRight infratop.inc</p>
      </div>
      </div>
    </div>
  </footer>
</html>
