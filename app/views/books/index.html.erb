  <p>プロフィール編集</p>

  <h2>New book</h2>

  <%= form_with model: @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

  <% end %>


  <h1>Book 一覧</h1>
  
  <table class= table>
    <tr>
    <th>Title</th>
    <th>Opinion</th>
    <% @books.each do |book| %>
  </tr>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
  </table>
  